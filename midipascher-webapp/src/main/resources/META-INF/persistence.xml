<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="midipascher-persistence-unit"
                      transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>fr.midipascher.domain.Address</class>
        <class>fr.midipascher.domain.Restaurant</class>
        <class>fr.midipascher.domain.FoodSpecialty</class>
        <class>fr.midipascher.domain.Account</class>
        <class>fr.midipascher.domain.Authority</class>
    </persistence-unit>
</persistence>
